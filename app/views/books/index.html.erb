<div class="main">
	<!-- 本一覧 -->
	<div>
		<h1>Bookers</h1>
		<table class="book-index">
				<tr>
					<th>title</th>
					<th>body</th>
					<th colspan=3></th>
				<tr>
			<% @books.each do |list| %>
				<tr>
					<td><%= list.title %></td>
					<td><%= list.body %></td>
					<td><%= link_to 'Show', book_path(list.id) %></td>
					<td><%= link_to 'Edit', edit_book_path(list.id) %></td>
					<td><%= link_to 'Destroy', book_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
				</tr>
			<% end %>
		</table>
	</div>


	<!-- 投稿フォーム -->
	<h2>New book</h2>
	<%= form_with(model: Book.new, url: books_path, method: :post, local: true) do |f| %>
		<p>Title</p>
		<%= f.text_field :title %>
		<p>Body</p>
		<%= f.text_area :body %></br>

		<%= f.submit 'Create Book' %>
	<% end %>
</div>