<div class="main">
	<h1>Edit</h1>
	<%= form_with(model: @book, url: book_path, method: :patch, remote: true) do |f| %>
		<p><%= f.text_field :title %></p>
		<p><%= f.text_area :body %></p>
		<p><%= f.submit 'Update Book' %></p>
	<% end %>

	<p>
		<%= link_to 'Edit', edit_book_path(@book) %> |
		<%= link_to 'Back', books_path %>
	</p>

</div>